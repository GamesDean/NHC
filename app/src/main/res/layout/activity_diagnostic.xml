<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.menowattge.nhcity.DiagnosticActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#4f9e33"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_diagnostic" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100sp"
        android:background="@drawable/rounded_edge_debug">


    <TextView
        android:id="@+id/nfc_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:textColor="#b23027"
        android:hint="Avvicinati al tag poi premi il pulsante"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="24sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:backgroundTint="#4f9e33"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400sp"
        android:layout_marginBottom="50sp"

        android:background="@drawable/rounded_edge_debug">

    <TextView
        android:id="@+id/write_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="30dp"
        android:textColor="#666"
        android:hint="Per copiare la configurazione in un altro HIXOS, premere il pulsante BLU "
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="24sp" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/write_copia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:backgroundTint="#4284f5"
            app:srcCompat="@android:drawable/ic_menu_edit" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>